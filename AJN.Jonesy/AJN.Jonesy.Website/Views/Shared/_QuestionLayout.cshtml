@using AJN.Common
@inherits AJN.Jonesy.Website.Views.LayoutViewBase

<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml" lang="en" xml:lang="en" itemscope itemtype="http://schema.org/QAPage">
<head>
    <link rel="shortcut icon" href="/Content/Images/favicon.png">
    <link rel="stylesheet" type="text/css" href="/Content/Styles/main.css">
    <link rel="publisher" href="https://plus.google.com/u/0/116103376784986961686" />
    @{
        UserAgentParser uap = new UserAgentParser(Request);
        if (uap.IsMobile)
        {
            <link rel="stylesheet" type="text/css" href="/Content/Styles/mobile.css">
        }
    }
    @RenderSection("Head")
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=yes" />
    <meta property="og:type" content="website" />
    <meta property="og:image" itemprop="image primaryImageOfPage" content="http://minecraftanswered.imbick.com/Content/Images/minecraft-answered-logo.png" />

    <title>@RenderSection("Title")</title>

    @if (AnalyticsFeature.IsEnabled) {
        <script>
            (function(i, s, o, g, r, a, m) {
                i['GoogleAnalyticsObject'] = r;
                i[r] = i[r] || function() {
                    (i[r].q = i[r].q || []).push(arguments)
                }, i[r].l = 1 * new Date();
                a = s.createElement(o),
                    m = s.getElementsByTagName(o)[0];
                a.async = 1;
                a.src = g;
                m.parentNode.insertBefore(a, m)
            })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');

            ga('create', 'UA-34213828-3', 'auto');
            ga('send', 'pageview');
        </script>
    }
</head>
<body>
    <div class="container">
        <header class="column">
            <a href="/" class="logo">Minecraft Answered</a>
            <span class="beta">beta</span>
            <h2>Simple answers to every Minecraft question</h2>
        </header>
        @RenderBody()
    </div>
    <footer>
        <div class="column">
            <p>Minecraft Answered is copyright &copy; 2016 Imbick software</p>
            <p><a href="https://minecraft.net/en/" title="Minecraft is a game about placing blocks and going on adventures.">Minecraft</a> &trade; is a trademark of <a href="https://mojang.com/" title="Mojang AB is a games studio based in Stockholm, Sweden.">Mojang Synergies AB</a> &copy; 2009-2016</p>
        </div>
    </footer>
</body>
</html>
